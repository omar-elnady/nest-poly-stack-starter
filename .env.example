# ─────────────────────────────────────────────
# Application
# ─────────────────────────────────────────────
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
APP_URL=http://localhost:3000

# ─────────────────────────────────────────────
# PostgreSQL (Prisma)
# ─────────────────────────────────────────────
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/frc_db?schema=public

# ─────────────────────────────────────────────
# Redis
# ─────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ─────────────────────────────────────────────
# Neo4j
# ─────────────────────────────────────────────
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# ─────────────────────────────────────────────
# Elasticsearch
# ─────────────────────────────────────────────
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=

# ─────────────────────────────────────────────
# JWT
# ─────────────────────────────────────────────
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_REFRESH_EXPIRATION=7d

# ─────────────────────────────────────────────
# OAuth 2.0 — Google
# ─────────────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# ─────────────────────────────────────────────
# OAuth 2.0 — LinkedIn
# ─────────────────────────────────────────────
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_CALLBACK_URL=http://localhost:3000/api/v1/auth/linkedin/callback

# ─────────────────────────────────────────────
# OAuth 2.0 — Facebook
# ─────────────────────────────────────────────
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/v1/auth/facebook/callback

# ─────────────────────────────────────────────
# MFA (Multi-Factor Authentication)
# ─────────────────────────────────────────────
MFA_ISSUER=FRC

# ─────────────────────────────────────────────
# Email (SMTP)
# ─────────────────────────────────────────────
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@frc.com

# ─────────────────────────────────────────────
# File Upload (AWS S3)
# ─────────────────────────────────────────────
AWS_S3_REGION=me-south-1
AWS_S3_BUCKET=frc-uploads
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ─────────────────────────────────────────────
# Logging
# ─────────────────────────────────────────────
LOG_LEVEL=debug
