# ─────────────────────────────────────────────
# Application (PRODUCTION)
# ─────────────────────────────────────────────
NODE_ENV=production
PORT=3000
API_PREFIX=api/v1
APP_URL=https://api.frc.com

# ─────────────────────────────────────────────
# PostgreSQL (PRODUCTION/MANAGED)
# ─────────────────────────────────────────────
# Paste your production database URL here
DATABASE_URL="prisma+postgres://your-production-url-here"

# ─────────────────────────────────────────────
# Redis (PRODUCTION)
# ─────────────────────────────────────────────
REDIS_HOST=production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-production-password
REDIS_DB=0

# ─────────────────────────────────────────────
# Neo4j (PRODUCTION)
# ─────────────────────────────────────────────
NEO4J_URI=bolt://production-neo4j-host:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-production-password

# ─────────────────────────────────────────────
# Elasticsearch (PRODUCTION)
# ─────────────────────────────────────────────
ELASTICSEARCH_NODE=https://production-es-host:9243
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=your-production-password

# ─────────────────────────────────────────────
# JWT
# ─────────────────────────────────────────────
# IMPORTANT: Use strong secrets for production
JWT_SECRET=CHANGE_THIS_TO_A_VERY_STRONG_RANDOM_SECRET
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_VERY_STRONG_SECRET
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
